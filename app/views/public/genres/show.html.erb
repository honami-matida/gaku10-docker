<div class="text-center h3 mb-5 py-3">
  <%= @genre.name %>の投稿一覧
</div>

<div class="container">
  <div class="row py-3 mt-5">

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>ジャンル</th>
          <th>アイコン</th>
          <th>投稿者</th>
          <th>投稿日時</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
            </td>
            <td><%= link_to truncate(post.title, length: 10), public_post_path(post) %></td>
            <td><%= post.genre.name %></td>
            <td><%= image_tag post.customer.get_profile_image(50,50), class:"icon" %></td>
            <td><%= truncate(post.customer.name, length: 10) %></td>
            <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
            <td><%#= render "favorites/btn", book: book %></td>
            <td>コメント数： <%= "#{post.post_comments.count} コメント" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="mx-auto">
      <%= paginate @posts, theme: 'bootstrap-5' %>
    </div>

  </div>
</div>