<div class='container'>
  <div class='row py-5'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3 class="text-center">グループ作成フォーム</h3>
      <%#= form_with model: @group, local: true do |f| %>
      <%= form_with model: @group, url: public_groups_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :group_image, 'グループ画像' %>
          <%= f.file_field :group_image, class: "form-control-file" , accept: "image/*" %>

        </div>
        <div class="form-group">
          <%= f.label :グループ名 %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name %>
        </div>

        <div class="form-group">
          <% if current_customer.guest_customer? %>
            <%= link_to "ログインへ(About)",destroy_customer_session_path, method: :delete, class:"btn btn-outline-info" %>
          <% else %>
            <%= f.submit '作成する', class: 'btn btn-info' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
