<div class="container">
  <div class="row py-3 mt-5">
    <div class="px-5 px-sm-0 mx-auto">
      <div class="mx-auto">
        <h2 class="text-center">新規登録</h2>
      </div>

      <div class="text-center">
        <p>下記フォームへのご記入をお願いします</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :name,"名前" %><br>
            <%= f.text_field :name %>
          </div>

          <div class="field">
            <%= f.label :email,"メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード再入力" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions mt-3">
            <%= f.submit "送信する", class: 'btn btn-info' %>
          </div>
        <% end %>

        <%= render "public/shared/links" %>
      </div>

    </div>
  </div>
</div>