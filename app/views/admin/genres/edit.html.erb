<div class="container">

  <h3 class="text-center mt-5">ジャンル編集</h3>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @genre, url: admin_genre_path(@genre), method: :patch, class: 'form-group') do |f| %>
        <%= f.label :name, "ジャンル名", class: 'form-label' %>
        <div class="row input-group mb-3">
          <%= f.text_field :name, class: 'form-control', placeholder: 'ジャンル名を入力してください' %>
        </div>
        <%= f.label :introduction, "紹介文", class: 'form-label' %>
        <div class="row input-group mb-3">
          <%= f.text_field :introduction, class: 'form-control', placeholder: 'ジャンルについて入力してください' %>
        </div>
        <div class="row input-group-append">
          <div class="mx-auto">
            <%= f.submit "更新", class: 'btn btn-info' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>