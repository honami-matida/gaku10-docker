<div class="text-center h3 mb-5 py-3">
  ジャンル一覧・追加
</div>

<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @genre, url: admin_genres_path, class: 'form-group') do |f| %>
        <%= f.label :name, "ジャンル名", class: 'form-label' %>
        <div class="input-group mb-3">
          <%= f.text_field :name, class: 'form-control', placeholder: 'ジャンル名を入力してください' %>
        </div>
        <%= f.label :introduction, "ジャンル紹介文", class: 'form-label' %>
        <div class="input-group mb-3">
          <%= f.text_field :introduction, class: 'form-control', placeholder: 'ジャンル名を入力してください' %>
        </div>
        <div class="input-group-append">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center py-5">
    <div class="col-md-8">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th>紹介文</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= genre.introduction %></td>
              <td><%= link_to '編集', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>