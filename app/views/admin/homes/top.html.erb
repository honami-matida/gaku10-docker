<div class="text-center h3 mb-5 py-3">
  投稿一覧
</div>

<div class="container">
  <div class="row py-3">

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>本文</th>
          <th>ジャンル</th>
          <th>アイコン</th>
          <th>投稿者</th>
          <th>投稿日時</th>
          <th></th>
          <th>コメント数</th>
          <th>いいね数</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td>
          </td>
          <td><%= link_to post.title, admin_post_path(post) %></td>
          <td><%= truncate(post.introduction, length: 30) %></td>
          <td><%= post.genre.name %></td>
          <td><%= image_tag post.customer.get_profile_image(50,50), class:"icon" %></td>
          <td><%= truncate(post.customer.name, length: 10) %></td>
          <td><%= post.customer.created_at.strftime('%Y/%m/%d') %></td>
          <td><%#= render "favorites/btn", book: book %></td>
          <td>
            <i class="fa-regular fa-comment-dots" style="color: #7d7d7d"></i>
            <%= post.post_comments.count %>
          </td>
          <td>
            <i class="fa-regular fa-heart" style="color: #7d7d7d"></i>
            <%= post.favorites.count %>
          </td>
        </tr>
       <% end %>
       </tbody>
     </table>

    <div class="row mx-auto">
      <%= paginate @posts, theme: 'bootstrap-5', class:"mx-auto" %>
    </div>

  </div>
</div>