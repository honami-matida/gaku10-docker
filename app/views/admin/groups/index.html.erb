<div class="text-center h3 mb-5 py-3">
  グループ一覧
</div>

<div class='container'>
  <div class='row my-5'>

    <table class='table'>
      <thead>
        <tr>
          <th></th>
          <th>グループ名</th>
          <th>紹介文</th>
          <th>オーナー</th>
          <th>オーナー名</th>
          <th>参加人数</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td>
              <%= image_tag group.get_group_image(50,50), class:"icon" %>
            </td>
            <td><%= link_to truncate(group.name, length: 15),admin_group_path(group) %></td>
            <td><%= truncate(group.introduction, length: 30) %></td>
            <td><%= image_tag group.owner.get_profile_image(50,50), class:"icon" %></td>
            <td><%= truncate(group.owner.name, length: 15) %></td>
            <td><%= group.group_requests.approved.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row mx-auto my-5">
      <%= paginate @groups, theme: 'bootstrap-5' %>
    </div>

  </div>
</div>
