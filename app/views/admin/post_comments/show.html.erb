<div class="text-center h3 mb-5 py-3">
  コメント詳細
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-borderless">

          <tr>
            <td class="text-nowrap">
              コメント日時:
            </td>
            <td>
              <%= @post_comment.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
            </td>
          </tr>
          <tr>
            <td>
              コメント:
            </td>
            <td>
              <%= @post_comment.comment %>
            </td>
          </tr>
          <tr>
            <td>会員:</td>
            <td>
              <%= image_tag @post_comment.customer.get_profile_image(50,50), class:"icon" %>

              <%= link_to admin_customer_path(@post_comment.customer), class:"offset-1" do %>
                <%= @post_comment.customer.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= link_to "削除する", admin_post_comment_path(@post_comment), method: :delete, class:"btn btn-danger ml-3" %>
            </td>
          </tr>


      </table>
    </div>
  </div>
</div>
